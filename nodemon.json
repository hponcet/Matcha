{
  "restartable": "rs",
  "runOnChangeOnly": false,
  "verbose": false,
  "colours": true,
  "stdin": true,
  "ignore": [
    ".git",
    "./node_modules/",
    "./matcha/public/"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "ignoreRoot": "ignoreRoot",
  "watch": [
    "./matcha/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
