{
  "restartable": "rs",
  "runOnChangeOnly": false,
  "verbose": false,
  "colours": true,
  "stdin": true,
  "ignore": [
    ".git",
    "./node_modules/"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "ignoreRoot": "ignoreRoot",
  "watch": [
    "./server/",
    "./modules/",
    "./classes/",
    "server.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json html"
}
